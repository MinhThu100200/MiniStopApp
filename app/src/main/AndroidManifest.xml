<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hcmute.edu.vn.mssv18128062">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyProject">

        <activity
            android:name=".MainActivity"
            android:label="@string/activity_login"
            android:theme="@style/noTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/noTitle" />
        <activity
            android:name=".ForgotPassActivity"
            android:theme="@style/noTitle" />
        <activity
            android:name=".VerifyEmailActivity"
            android:theme="@style/noTitle" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="hcmute.edu.vn.mssv18128062"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_path" />
        </provider>

        <activity
            android:name=".HomePageActivity"
            android:theme="@style/noTitle" />
        <activity
            android:name=".MyInfoActivity"
            android:theme="@style/noTitle" />
        <activity android:name=".CartActivity" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".FoodActivity"
            android:theme="@style/noTitle">
        </activity>
    </application>

</manifest>