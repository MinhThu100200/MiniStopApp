<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#17C8B8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="4">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/img"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:layout_centerInParent="true"></ImageView>

    <ImageButton
        android:id="@+id/btnimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_gravity="center"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="-38dp"
        android:background="@drawable/boder_camera"
        android:src="@drawable/camera"></ImageButton>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:paddingLeft="5dp"
            android:id="@+id/name"
            android:hint="Họ Tên"
            android:background="@drawable/boder_edittext"
            android:text="Nguyễn Thị Minh Thư"
            android:textColor="#A5A2A2">
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="mint"
            android:hint="Tên đăng nhập"
            android:id="@+id/username"
            android:background="@drawable/boder_edittext"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:textColor="#A5A2A2"
            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000000"
            android:textColor="#A5A2A2"
            android:id="@+id/password"
            android:hint="Mật khẩu"
            android:background="@drawable/boder_edittext"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:hint="Email"
            android:background="@drawable/boder_edittext"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            android:text="minthu@"
            android:textColor="#A5A2A2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000000"
            android:textColor="#A5A2A2"
            android:id="@+id/phone"
            android:background="@drawable/boder_edittext"
            android:layout_weight="1"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/boder_button"
            android:text="Cập Nhật thông tin"
            android:textColor="#fff"
            android:id="@+id/update_info"
            android:textAllCaps="true"></Button>
    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Đóng"
            android:layout_marginTop="20dp"
            android:textColor="#009688"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/log_out"
            android:background="@drawable/border_listview"
            android:textStyle="bold"></Button>


</LinearLayout>