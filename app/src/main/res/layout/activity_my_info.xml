<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#17C8B8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="5">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera"
        android:id="@+id/img"
        android:layout_marginTop="30dp"
        android:background="@drawable/boder_circle"
        android:layout_gravity="center"></ImageButton>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:paddingLeft="5dp"
            android:id="@+id/name"
            android:background="@drawable/boder_edittext"
            android:text="Nguyễn Thị Minh Thư"
            android:textColor="#A5A2A2">
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10/02/2000"
            android:id="@+id/birthday"
            android:background="@drawable/boder_edittext"
            android:layout_marginTop="10dp"
            android:inputType="datetime"
            android:paddingLeft="5dp"
            android:textColor="#A5A2A2"
            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="minhthuthum@gmail.com"
            android:textColor="#A5A2A2"
            android:id="@+id/email"
            android:background="@drawable/boder_edittext"
            android:layout_weight="1"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#A5A2A2"
            android:background="@drawable/boder_edittext"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="0346279377"
            android:layout_weight="1"
            android:inputType="phone"
            android:id="@+id/number_phone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nữ"
                android:checked="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_weight="1"
                android:id="@+id/female"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nam"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_weight="1"

                android:id="@+id/male"
                ></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_weight="1"
                android:id="@+id/other"
                android:textColor="@color/white"
                android:text="Khác"></RadioButton>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/boder_button"
            android:text="Cập Nhật thông tin"
            android:textColor="#fff"
            android:id="@+id/update_info"
            android:textAllCaps="true"></Button>
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đăng xuất"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/log_out"
            android:textStyle="bold"></TextView>


</LinearLayout>