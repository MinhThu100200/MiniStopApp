<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PointFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/point_ex"/>
        <TextView
            android:id="@+id/point"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:background="@drawable/border_listview"
            android:text="Point" />

        <Button
            android:id="@+id/exchange"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:layout_below="@id/point"
            android:layout_centerHorizontal="true"
            android:hint="Chức năng hiện đang hoàn thiện. Thông cảm cho bé Mint ạ!"
            android:text="Đổi điểm"
            android:background="@drawable/boder_button"/>
    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->


</FrameLayout>